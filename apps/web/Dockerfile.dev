FROM node:20-alpine

WORKDIR /usr/src/app

# Install dependencies as root
COPY package*.json ./
RUN npm ci --legacy-peer-deps

# Copy application files
COPY . .

# Change ownership to node user (already exists in base image with UID 1000)
RUN chown -R node:node /usr/src/app

# Switch to non-root user
USER node

ENV NEXT_TELEMETRY_DISABLED=1
EXPOSE 3000
CMD ["npm", "run", "dev"]
